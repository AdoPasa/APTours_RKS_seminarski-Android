<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:textAllCaps="true"
    android:layout_marginTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding"
    android:background="@drawable/border_top"
    android:gravity="center_vertical"
    android:paddingTop="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/reviewProfilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_profile" />

    <!--<de.hdodenhof.circleimageview.CircleImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/reviewProfilePhoto"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="fitXY"
      android:src="@drawable/default_profile"
      app:civ_border_color="@color/colorAccent" />-->

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                style="@style/Subtitle"/>

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2.5dp"
                android:layout_alignParentRight="true"
                android:textSize="14dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/RatingFirstStar"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:scaleType="fitXY"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/RatingSecondStar"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:scaleType="fitXY" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/RatingThirdStar"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:scaleType="fitXY" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/RatingFourthStar"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:scaleType="fitXY"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/RatingFifthStar"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/TextSize"/>
    </LinearLayout>
</LinearLayout>