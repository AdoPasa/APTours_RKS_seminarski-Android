<resources>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontH1">
        <item name="android:textSize">112sp</item>
    </style>

    <style name="FontH2">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="FontH3">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="FontH4">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="FontHeadline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FontTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontSubtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontBody1">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBody2">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="FontCaption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontMenu">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultButton" parent="FontButton">
        <item name="android:paddingTop">@dimen/button_pading_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_pading_top_bottom</item>
        <item name="android:paddingLeft">@dimen/button_pading_left_right</item>
        <item name="android:paddingRight">@dimen/button_pading_left_right</item>
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
    </style>

    <style name="PrimaryButton" parent="DefaultButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
    </style>

    <style name="SecondaryButton" parent="DefaultButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorSecondaryTextLight</item>
    </style>

    <style name="Label" parent="FontCaption">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PrimarySpinner" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="android:padding">0dp</item>
    </style>

    <style name="MenuItem" parent="FontMenu">
        <item name="android:textColor">@color/colorPrimaryTextLight</item>
    </style>

    <style name="MenuSubitem" parent="FontMenu">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Title" parent="FontTitle">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Subtitle" parent="FontSubtitle">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>
